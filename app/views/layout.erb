<title>Bookmark Manager</title>
<style type="text/css">
body {
	margin-left: 0px;
	margin-top: 0px;
	margin-right: 0px;
	margin-bottom: 0px;
}
body,td,th {
	font-family: Arial, Helvetica, sans-serif;
	font-weight: bold;
	font-size: 14px;
}
.WhiteText {
	color: #FFF;
	font-size: 20px;
}
</style>

  <table width="100%" height="5" border="0" cellpadding="0" cellspacing="0">
    <tr>
      <td width="20" height="5" bgcolor="#000000">&nbsp;</td>
      <td width="223" height="5" bgcolor="#000000"><span class="WhiteText">Bookmark Manager</span></td>
      <td width="180" height="5" valign="middle" bgcolor="#000000">
        <table width="100%" border="0" cellspacing="0" cellpadding="0">
          <tr>
            <td height="5">&nbsp;</td>
          </tr>
          <tr>
            <td>
            	<% if current_user %>
                <form action='/new'>
                	<input type='image' value='New Link' src='/images/newlink.png' align="middle">
            	</form>
                <% end %>
            </td>
          </tr>
        </table>
      </td>
      <td width="467" height="5" bgcolor="#000000"><span class="WhiteText">
      	<% if current_user %>
			Welcome, <%= current_user.email %>
		<% end %></span>
      </td>
      <td width="120" height="5" valign="middle" bgcolor="#000000">
      	<table width="100%" border="0" cellspacing="0" cellpadding="0">
          <tr>
            <td height="5">&nbsp;</td>
          </tr>
          <tr>
            <td>
              <% if current_user %>
                <form method='post' action='/sessions'>
                    <input type='hidden' name='_method' value='delete'>
                    <input type='image' value='Sign out' src='/images/signout.png' align="middle">
                </form>
              <% else %>
                <form action='/signup'>
                    <input type='image' value='Sign up' src='/images/signup.png' align="middle">
                </form>
              <% end %>
            </td>
          </tr>
        </table>
      </td>
      <td width="120" height="5" valign="middle" bgcolor="#000000">
              <table width="100%" border="0" cellspacing="0" cellpadding="0">
          <tr>
            <td height="5">&nbsp;</td>
          </tr>
          <tr>
            <td>
				<form action='/sessions/new'>
        			<input type='image' value='Sign in' src='/images/signin.png' align="middle">
      	 		</form>
            </td>
          </tr>
        </table>
      </td>
      <td width="20" height="5" bgcolor="#000000">&nbsp;</td>
    </tr>
  </table>
  
<% if (flash[:errors] && !flash[:errors].empty?) || flash[:notice] %>
    <div id='errors'>
        <table width="100%" border="0" cellspacing="0" cellpadding="0">
          <tr>
            <td height="20" align="center" valign="middle" bgcolor="#FF0000">
            <% if flash[:notice] %>
                <%= flash[:notice] %>
            <% end %>
            <% if flash[:errors] && !flash[:errors].empty? %>
                <ul id='errors'>
                    <% flash[:errors].each do |error| %>
                        <%= error %>
                    <% end %>
                </ul>
            <% end %>
            </td>
          </tr>
        </table>
    </div>
<% end %>

<%= yield %>